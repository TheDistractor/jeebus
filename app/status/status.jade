.row
  .large-8.columns
    h3 Readings
  .large-4.columns
    h3
      // for vertical alignment
    input(type='text',ng-model='shared.statusQuery',placeholder='Search...')

  .large-12.columns
    table
      tr
        th Location
        th Parameter
        th Value
        th Unit
        th Time
        th Type
        th Id
      tr(ng-repeat='r in readings | filter:shared.statusQuery | orderBy:"loc" \
                    track by r.did' highlight-on-change='r.ms')
        td(align='right') {{r.loc}}
        td {{r.key}}
        td(align='right') {{r.value}}
        td {{r.unit}}
        td {{r.ms | date:"MM-dd HH:mm:ss"}}
        td {{r.typ}}
        td {{r.did}}
